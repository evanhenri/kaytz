{
    "DhcpDdns": {
        "ip-address": "{{ phys_intf_ddns_server }}",
        "port": 53001,
        "dns-server-timeout": 100,
        "ncr-protocol": "UDP",
        "ncr-format": "JSON",
        "tsig-keys": [
            {
                "name": "ddns-tsig-key.{{ domain }}",
                "algorithm": "HMAC-SHA512",
                "secret": "{{ kea_ddns_key }}"
            }
        ],
        "forward-ddns": {
            "ddns-domains": [
                {
                    "name": "{{ domain }}.",
                    "key-name": "ddns-tsig-key.{{ domain }}",
                    "dns-servers": [
                        {
                            "hostname": "",
                            "ip-address": "{{ phys_intf_dns_nameserver }}",
                            "port": 53
                        }
                    ]
                }
            ]
        },
        "reverse-ddns": {
            "ddns-domains": [
                {
                    "name": "1.0.10.in-addr.arpa.",
                    "key-name": "ddns-tsig-key.{{ domain }}",
                    "dns-servers": [
                        {
                            "hostname": "",
                            "ip-address": "{{ phys_intf_dns_nameserver }}",
                            "port": 53
                        }
                    ]
                }
            ]
        }
    }
}